@model TwitterUser
@{
    ViewData["Title"] = "Home";
}
<div>
    <form asp-action="FilterData" method="post">
        <table class="table table-sm">
            <tbody>
                @{ foreach (var tag in ViewBag.tags)
                    {
                        <tr>
                            <td>@tag.Name</td>
                            <td>
                                @{ if (ViewBag.checkedTags.Contains(tag.Name))
                                    {
                                        <input name="AreChecked" type="checkbox" value="@tag.Name" checked />
                                    }
                                    else
                                    {
                                        <input name="AreChecked" type="checkbox" value="@tag.Name" />
                                    } }
                            </td>
                        </tr>
                    } }
                <tr>
                    <td>
                        <b>show retweets</b>
                    </td>
                    <td>
                        @{ if (ViewBag.ShowRetweets)
                            {
                                <input name="ShowRetweets" type="checkbox" value="true" checked />

                            }
                            else
                            {
                                <input name="ShowRetweets" type="checkbox" value="true" />

                            } }
                    </td>
                </tr>
            </tbody>
        </table>
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </form>
</div>

<p></p>
<hr />

<div>
    <partial name="_Tweet" model="ViewBag.Tweets" />
</div>